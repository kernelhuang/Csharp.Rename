<Controls:MetroWindow x:Class="MahApps.Metro.Rename.MainWindow"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
                      Title="MainWindow"
                      Height="450"
                      Width="800">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="222,60,0,0" TextWrapping="Wrap" Text="Select a message option and then choose the Display button." VerticalAlignment="Top"/>
        <RadioButton x:Name="HelloButton" Content="Hello" HorizontalAlignment="Left" IsChecked="True" Margin="210,212,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="HiButton" Content="Hi" HorizontalAlignment="Left" Margin="498,212,0,0" VerticalAlignment="Top"/>
        <Button Content="Show" HorizontalAlignment="Left" Margin="359,295,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
    </Grid>
</Controls:MetroWindow>
